@model ChefSahar.UI.WebUI.Components.Recipes.Components.Paging.PagingViewModel

    <section class="all-recipes-page-wrap padding-bottom-22">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <nav aria-label="Page navigation recipe">
                        <ul class="pagination justify-content-center">
                            <li class="page-item m-2 @(Model.CurrentPage == 1 ? "disabled" : "" )">
                                <a class="page-link text-white bg-danger p-3 rounded" href="@Url.Action("Recipes","Home",new { CurrentPage = Model.CurrentPage >= Model.TotalPage ? Model.CurrentPage - 1 : 1})">Previous</a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPage; i++)
                            {

                               
                                if (Model.CurrentPage == i)
                                {
                                    <li class="page-item m-2"><a class="page-link text-dark bg-white p-3 rounded" href="@Url.Action("Recipes", "Home", new { CurrentPage = i })">@i</a></li>

                                }
                                else
                                {

                                    <li class="page-item m-2"><a class="page-link text-white bg-danger p-3 rounded" href="@Url.Action("Recipes", "Home", new { CurrentPage = i })">@i</a></li>
                                }
                            }

                            <li class="page-item m-2 @(Model.CurrentPage == Model.TotalPage ? "disabled" : "" )">

                                <a class="page-link text-white bg-danger p-3 rounded" href="@Url.Action("Recipes","Home",new {CurrentPage = Model.CurrentPage < Model.TotalPage ? Model.CurrentPage + 1 : Model.TotalPage })" tabindex="-1" aria-disabled="true">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>